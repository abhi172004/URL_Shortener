<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Server</title>
</head>
<body>
    <h1>URL Shortner</h1>
    <% if(locals.id) { %>
        <h2>Shortened URL: http://localhost:8001/<%= id %></h2>
    <% } %>
    
    
    <div>
        <form action="/url" method="POST">
            <label> Enter Original URL</label>
            <input type="text" name="url" placeholder="http://example.com">
            <button type="submit">Generate</button>
        </form>
    </div>
    <div>
        <% if (locals.urls) { %>
        <table>
            <thead>
                <th>Serial no.</th>
                <th>ShortID</th>
                <th>Redirect</th>
                <th>Clicks</th>
            </thead>
            <tbody>
                <% urls.forEach((url, idx) => { %>
                    <tr>
                 <td><%= idx+1 %></td>
                 <td><%= url.shortId %></td>
                 <td><%= url.redirectURL %></td>
                 <td><%= url.visitHistory.length %></td>
                 </tr>
                <% }) %>
            </tbody>
        </table>
        <% } %>
    </div>

</body>
</html>